@model CustomShop.Models.Good
@using CustomShop.Models;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <h2 class="centered">Деталі</h2>

    <div class="info-panel">

        <hr />
        <div class="info-about-good">
            <div class="img-info">
                @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.Image) + "\" />")
            </div>
            <div class="text-info">
                <h1 class="price-text">@Model.Name</h1>
                <h2 class="type-name">Тип предмета: @Model.GoodType.Name </h2>
                <div class="good-description">
                    <h2 class="good-description-name">Опис: </h2>
                    <p class="convertToHTML">@Model.Description</p>
                </div>
                <h1 class="price-text">Ціна: @Model.Price</h1>
                <div class="good-description">
                    <p>Доступні кольори:</p>
                    <div class="color-list">

                        @foreach (Color el in ViewBag.Colors)
                        {
                            <div style="background-color: @el.Code; "></div>
                        }
                    </div>
                </div>

                <div class="bottom-links">
                    @Html.ActionLink("Редагувати", "Edit", new { id = Model.Id })
                    @Html.ActionLink("Видалити", "Delete", new { id = Model.Id }, new { @class = "deleteButton" })
                </div>
            </div>
        </div>
        <hr />
    </div>
    <div class="bottom-links centered">
        @Html.ActionLink("Повернутись до списку", "Index")
    </div>
</div>