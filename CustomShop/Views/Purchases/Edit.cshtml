@model CustomShop.Models.Purchase

@{
    ViewBag.Title = "Редагувати";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="centered">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Статус замовлення №@Model.Id</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Price)
            @Html.HiddenFor(model => model.Date)
            @Html.HiddenFor(model => model.ClientId)

            <div class="">
                @Html.LabelFor(model => model.PurchaseStateId, "Статус:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.DropDownList("PurchaseStateId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PurchaseStateId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="centered ">
                <div class="save-link">
                    <input type="submit" value="Зберегти" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div class="bottom-links centered no-side-margin">
        @Html.ActionLink("Повернутись до замовлення", "Details", new { id = Model.Id })
    </div>
</div>